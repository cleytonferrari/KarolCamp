@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/AppKO/HomeViewModel.js"></script>

<div class="jumbotron">
    <h1>Karol Camp</h1>
    <p>Sistema para gerenciar palestras, trilhas, salas e muito mais!</p>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Palestrantes
            </div>
            <p class="panel-body">

                <!-- ko foreach: listaDePalestrantes -->
                <a data-bind="attr:{href:''}">
                    <img data-bind="attr:{src:'/Home/Arquivo/?id=' + $data.FotoId}" width="150px" class="img-thumbnail" title="$data.Nome" alt="$data.Nome">
                </a>
                <!-- /ko -->

            </p>
        </div>
    </div>
</div>

<div class="row">
    <!-- ko foreach: listaDePalestras -->
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <small>Palestra</small> <strong data-bind="text: $data.Titulo"></strong>
            </div>
            <div class="panel-body">
                <span data-bind="text: $data.Descricao"></span>
                <br /><br />
                <em>Nível: </em><span data-bind="text: $data.Nivel"></span><br />
                <em>Sala: </em><span data-bind="text: $data.Sala.Nome"></span><br />
                <em>Trilha: </em><span data-bind="text: $data.Trilha.Nome"></span>
            </div>
            <div class="panel-footer" data-bind="text:$data.Palestrante.Nome">
                
            </div>
        </div>
    </div>
    <!-- /ko -->
</div>

