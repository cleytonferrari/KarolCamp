@{
    ViewBag.Title = "Editar";
}
<script src="~/Scripts/AppKO/Sala/EditarViewModel.js"></script>
<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministradas as palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova sala</a>
</div>

<form data-bind="submit: salvar">
    <fieldset>
        <legend>Sala</legend>

        <div class="editor-label">
            Nome:
        </div>
        <div class="editor-field">
            <input type="text" name="Nome" value=" " data-bind="value: nome" />
        </div>

        <hr />
        <p>
            <input type="submit" value="Salvar" class="btn btn-sm btn-info" />
            <a href="@Url.Action("Index")"> Cancelar</a>
        </p>
    </fieldset>
</form>
