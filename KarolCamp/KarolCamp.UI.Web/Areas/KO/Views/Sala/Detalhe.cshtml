@{
    ViewBag.Title = "Sala - Detalhe";
}
<script src="~/Scripts/AppKO/Sala/DetalheViewModel.js"></script>
<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministradas as palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova sala</a>
</div>

<fieldset>
    <legend>Detalhes da sala</legend>
    <div class="form-group">
        <p><strong>Nome: </strong> <span data-bind="text: nome"></span></p>
    </div>
</fieldset>
<hr />
<p>
    <a data-bind="attr: { href: '/KO/Sala/Editar/' + id() }" class="btn btn-sm btn-info">Editar</a>
    <a href="@Url.Action("Index")"> Voltar</a>
</p>
