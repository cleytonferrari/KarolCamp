<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap/base")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">

                <a class="navbar-brand" href="~/">Karol Camp - KO</a>
            </div>

            <div class="collapse navbar-collapse header-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trilha", "Index", "Trilha")</li>
                    <li>@Html.ActionLink("Sala", "Index", "Sala")</li>
                    <li>@Html.ActionLink("Palestrante", "Index", "Palestrante")</li>
                    <li>@Html.ActionLink("Palestra", "Index", "Palestra")</li>
                </ul>
                <p class="navbar-text navbar-right">Código fonte em <a href="https://github.com/cleytonferrari/karolcamp" target="_blank">GitHub</a></p>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
