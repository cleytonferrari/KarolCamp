@{
    ViewBag.Title = "Deletar";
}
<script src="~/Scripts/AppKO/Trilha/DeletarViewModel.js"></script>

<div class="page-header">
    <h1>Trilha <small>organize as trilhas de suas palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova trilha</a>
</div>
<div class="alert alert-danger">
    <strong>Atenção!</strong> Deseja realmente excluir este registro?
</div>
<fieldset>
    <legend>Excluir trilha</legend>
    <div class="form-group">
        <p><strong>Nome: </strong> <span data-bind="text: nome"></span></p>
    </div>
</fieldset>
<hr />
<form data-bind="submit: excluir">
    <p>
        <input type="submit" value="Excluir" class="btn btn-sm btn-info" />
        @Html.ActionLink("Cancelar", "Index")
    </p>
</form>