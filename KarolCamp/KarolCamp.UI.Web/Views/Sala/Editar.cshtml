@model KarolCamp.Dominio.Sala

@{
    ViewBag.Title = "Editar";
}

<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministradas as palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova sala</a>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sala</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        @Html.HiddenFor(model => model.Id)

        <hr />
        <p>
            <input type="submit" value="Salvar" class="btn btn-sm btn-info" />
            <a href="@Url.Action("Index")"> Cancelar</a>
        </p>
    </fieldset>
}