@model KarolCamp.Dominio.Palestra

@{
    ViewBag.Title = "Cadastrar";
}

<div class="page-header">
    <h1>Palestra <small>organize suas palestras</small></h1>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nova Palestra</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Codigo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Codigo)
            @Html.ValidationMessageFor(model => model.Codigo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nivel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nivel)
            @Html.ValidationMessageFor(model => model.Nivel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Horario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Horario)
            @Html.ValidationMessageFor(model => model.Horario)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Trilha)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Trilha.Id",(SelectList)ViewBag.ListaDeTrilhas)
            @Html.ValidationMessageFor(model => model.Trilha.Id)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Palestrante)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Palestrante.Id",(SelectList)ViewBag.ListaDePalestrantes)
            @Html.ValidationMessageFor(model => model.Palestrante.Id)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Sala)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Sala.Id",(SelectList)ViewBag.ListaDeSalas)
            @Html.ValidationMessageFor(model => model.Sala.Id)
        </div>

        <hr />
        <p>
            <input type="submit" value="Salvar" class="btn btn-sm btn-info" />
            <a href="@Url.Action("Index")"> Cancelar</a>
        </p>
    </fieldset>
}