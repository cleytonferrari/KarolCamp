@model IEnumerable<KarolCamp.Dominio.Trilha>

@{
    ViewBag.Title = "Trilha";
}

<div class="page-header">
    <h1>Trilha <small>organize as trilhas de suas palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova trilha</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Trilhas cadastradas
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome da trilha</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var x = 0;}
                        @foreach (var item in Model)
                        {
                            x++;
                            <tr>
                                <td style="width: 50px">@x</td>
                                <td><a href="@Url.Action("Detalhe", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Nome)</a></td>
                                <td style="width: 100px">
                                    <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="@Url.Action("Deletar", new { id = item.Id })" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
