@model KarolCamp.Dominio.Trilha

@{
    ViewBag.Title = "Deletar";
}

<div class="page-header">
    <h1>Trilha <small>organize as trilhas de suas palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Nova trilha</a>
</div>
<div class="alert alert-danger">
    <strong>Atenção!</strong> Deseja realmente excluir este registro?
</div>
<fieldset>
    <legend>Excluir trilha</legend>
    <div class="form-group">
        <p><strong>Nome: </strong> @Html.DisplayFor(model => model.Nome)</p>
    </div>

</fieldset>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Excluir" class="btn btn-sm btn-info" />
        @Html.ActionLink("Cancelar", "Index")
    </p>
}