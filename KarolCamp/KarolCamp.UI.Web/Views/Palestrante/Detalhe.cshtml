@model KarolCamp.Dominio.Palestrante

@{
    ViewBag.Title = "Palestrante - Detalhe";
}
<div class="page-header">
    <h1>Palestrantes <small>organize os palestrantes de suas palestras</small></h1>
    <a href="@Url.Action("Cadastrar")" class="btn btn-sm btn-primary">Novo palestrante</a>
</div>
<fieldset>
    <legend>Palestrante</legend>
    <div class="form-group">
        <p><strong>Nome: </strong> @Html.DisplayFor(model => model.Nome)</p>
        <p><strong>Twitter: </strong> @Html.DisplayFor(model => model.Twitter)</p>
        <p><strong>Bio: </strong> @Html.DisplayFor(model => model.Bio)</p>
        <p><img src="/Home/Arquivo/?id=@Model.FotoId" width="120px" class="img-thumbnail" /></p>
    </div>
</fieldset>
<hr />
<p>
    <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-sm btn-info">Editar</a>
    <a href="@Url.Action("Index")"> Voltar</a>
</p>